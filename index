                position: absolute;
                background-color: theme('colors.petal');
                border-radius: 50% 50% 20% 80%;
                pointer-events: none;
                opacity: 0.7;
                z-index: 0;
            }
            .fade-in {
                opacity: 0;
                transform: translateY(20px);
                transition: opacity 0.8s ease-out, transform 0.8s ease-out;
            }
            .fade-in.visible {
                opacity: 1;
                transform: translateY(0);
            }
        }
