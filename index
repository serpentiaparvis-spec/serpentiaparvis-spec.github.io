    </main>

    <script>
        // 页面加载完成后执行
        document.addEventListener('DOMContentLoaded', () => {
            // 初始化花瓣效果
            initPetals();
            
            // 初始化滚动淡入效果
            initFadeInOnScroll();
            
            // 检查初始可见元素
            checkFadeElements();
        });
        
        // 花瓣飘落效果
        function initPetals() {
            const container = document.getElementById('petals-container');
            const totalPetals = 30; // 花瓣总数
            
            // 确保容器存在
            if (!container) {
                console.error('花瓣容器未找到');
                return;
            }
            
            // 创建花瓣
            for (let i = 0; i < totalPetals; i++) {
                createPetal(container);
            }
            
            // 响应窗口大小变化
            window.addEventListener('resize', () => {
                // 清除现有花瓣
                while (container.firstChild) {
                    container.removeChild(container.firstChild);
                }
                
                // 重新创建花瓣
                for (let i = 0; i < totalPetals; i++) {
                    createPetal(container);
                }
            });
        }
        
        function createPetal(container) {
            const petal = document.createElement('div');
            petal.classList.add('petal');
            
            // 随机大小
            const size = Math.random() * 8 + 3;
            petal.style.width = `${size}px`;
            petal.style.height = `${size}px`;
            
            // 随机初始位置
            const width = window.innerWidth;
            petal.style.left = `${Math.random() * width}px`;
            petal.style.top = `-${size}px`;
            
            // 随机动画
            const duration = Math.random() * 15 + 10; // 10-25秒
            const delay = Math.random() * 10; // 0-10秒延迟
            
            // 添加动画
            petal.style.animation = `
                fall ${duration}s linear ${delay}s infinite,
                sway ${(Math.random() * 3 + 2)}s ease-in-out ${delay}s infinite alternate
            `;
            
            container.appendChild(petal);
        }
        
        // 滚动淡入效果
        function initFadeInOnScroll() {
            // 监听滚动事件
            window.addEventListener('scroll', checkFadeElements);
        }
        
        function checkFadeElements() {
            const fadeElements = document.querySelectorAll('.fade-in');
            
            fadeElements.forEach(element => {
                const elementTop = element.getBoundingClientRect().top;
                const elementVisible = 150; // 元素顶部距离视口底部多少时显示
                
                if (elementTop < window.innerHeight - elementVisible) {
                    element.classList.add('visible');
                }
            });
        }
        
        // 添加CSS动画
        const style = document.createElement('style');
        style.textContent = `
            @keyframes fall {
                to {
                    transform: translateY(${window.innerHeight}px) rotate(720deg);
                    opacity: 0;
                }
            }
            @keyframes sway {
                from {
                    transform: translateX(-20px);
                }
                to {
                    transform: translateX(20px);
                }
            }
        `;
        document.head.appendChild(style);
    </script>
</body>
</html>
    
